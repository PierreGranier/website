
{% extends 'AppBundle::layout.html.twig' %}

{% block title %}{{ 'sitename' | trans }} | {{ 'contact.title'|trans }}{% endblock %}

{% block content %}
<div class="container">
	<div class="row">
		<div class="col-md-push-3 col-md-6 white_background boxElement">

			<h2 class="main_title">{{ 'contact.title' | trans }}</h2>
			<hr>
			<form action="{{ path('app_contact') }}" method="post" {{ form_enctype(form) }} class="app">

				{{ form_errors(form) }}
			<div class="form-group">
				{{ form_label(form.name,'form.name'|trans) }}
				{{ form_widget(form.name,{'attr': {'class': 'form-control'}})}}
			</div>
			<div class="form-group">
				{{ form_label(form.email,'form.email'|trans) }}
				{{ form_widget(form.email,{'attr': {'class': 'form-control'}})}}
			</div>
			<div class="form-group">
				{{ form_label(form.subject, 'form.subject'|trans) }}
				{{ form_widget(form.subject,{'attr': {'class': 'form-control'}})}}
			</div>
			<div class="form-group">
				{{ form_label(form.body, 'form.body'|trans) }}
				{{ form_widget(form.body,{'attr': {'class': 'form-control'}})}}
			</div>      

				{{ form_rest(form) }}

				<input type="submit" value={{'form.send'|trans}} class="btn btn-primary" />
			</form>
		</div>
	</div>
</div>
{% endblock content %}
