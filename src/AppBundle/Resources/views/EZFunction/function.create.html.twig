{% extends 'AppBundle::layout.html.twig' %}


{% block title %}{{ 'sitename' | trans }} | {{ 'functionCreate.title'|trans }}{% endblock %}

{% block content %}

<div class="container">
    <div class="row">
        <div class="col-md-push-2 col-md-8 white_background boxElement">
            <h2 class="main_title">{{ 'functionCreate.title'' | trans }}</h2>

            <script type="text/javascript" charset="utf-8" src="{{ asset('bundles/app/ckeditor/ckeditor.js') }}"></script>
            <form action="{{ path('app_admin_functionCreate') }}" method="post" {{ form_enctype(form) }} class="app">
                {{ form_widget(form._token) }}
                {{ form_errors(form) }}
                
                <div class="form-group">
                    {{ form_row(form.name, {'label': 'form.name' | trans , 'attr': {'style': 'width:100%', 'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.french_description, {'label': 'form.descriptionFrench' | trans , 'attr': {'style': 'width:100%; height: 150px;', 'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.english_description, {'label': 'form.descriptionEnglish' | trans , 'attr': {'style': 'width:100%; height: 150px;', 'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.french_html, {'label': 'form.frenchHTML' | trans , 'attr': {'style': 'width:100%;', 'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.english_html, {'label': 'form.englishHTML' | trans , 'attr': {'style': 'width:100%;', 'class': 'form-control'}}) }}
                </div>
                <script>
                    CKEDITOR.replace('appbundle_ezfunction_french_html');
                    CKEDITOR.replace('appbundle_ezfunction_english_html');
                </script>

                <div class="form-group">
                    {{ form_row(form.category, {'label':'category.title' | trans, 'attr': {'class': 'form-control'}}) }}
                </div>

                <h3 class="main_title">{{ 'argument.title' | trans }}</h3>

                <div class="form-group">
                    <button class="btn btn-default" id="add_argument_link" type="button">{{ 'argument.add' | trans }}</button>
                </div>
                <ul class="arguments" data-prototype="{% filter escape %}
                {{ include('AppBundle:EZFunction:_argument.html.twig', { 'form': form.arguments.vars.prototype }) }}
            {% endfilter %}">
                </ul>
                <hr>
                <input type="submit" value="Submit" class="btn btn-success" />
            </form>
        </div>
    </div>
</div>

{% endblock content %}

{% block javascripts_body %}
{{ parent() }}

<script type="text/javascript" charset="utf-8" src="{{ asset('bundles/app/js/argument.js') }}"></script>

{% endblock javascripts_body %}
