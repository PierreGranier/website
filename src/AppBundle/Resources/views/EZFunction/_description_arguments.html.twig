{% if function.getArguments|length > 0 %}
    <div class="arguments">
        <h2 class="main_title">Arguments</h2>
        <ul>
            {% set returnValue = null %}
            {% include 'AppBundle:EZFunction:_description_argument_value.html.twig' %}
        </ul>
        {% if returnValue %}
            <h2 class="main_title">Valeur de retour</h2>
            <ul>
                <li><h3>{{ returnValue.type.name }}</h3>
                    {% if (language == "en") %}
                        <p>{{ returnValue.getEnglishDescription }}</p>
                    {% else %}
                        <p>{{ returnValue.getFrenchDescription }}</p>
                    {% endif %}
                </li>
            </ul>
        {% endif %}
    </div>
{% endif %}
