{% extends 'AppBundle::layout.html.twig' %}


{% block title %}{{ 'sitename' | trans }} | {{ 'CreateComment.title'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/app/bootstrapdatepicker/bootstrap-datepicker.min.css') }}" />
{% endblock stylesheets %}
   
{% block javascripts_body %}
    {{ parent() }}
    <script type="text/javascript" charset="utf-8" src="{{ asset('bundles/app/bootstrapdatepicker/bootstrap-datepicker.js') }}"></script>
{% endblock javascripts_body %}

{% block content %}

<div class="container">
    <div class="row">
        <div class="col-md-push-2 col-md-8 white_background boxElement">
            <h2 class="main_title">{{'CreateComment.title' | trans}} <span class="glyphicon glyphicon-pushpin" aria-hidden="true"></span></h2>
                 
                 <p class="bg-warning"> 
                    {{ form_errors(form) }}
                 </p>
                 
                 {{ form_start(form,{'attr':{}} ) }}
                    
                    {{ form_widget(form._token) }}
                    
                    <div class="form-group">
                        {{ form_row(form.user) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.comment) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.postedAt) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.save) }}
                    </div>
                {{ form_end(form) }} 
        </div>
    </div>
</div>
{% endblock content %}
