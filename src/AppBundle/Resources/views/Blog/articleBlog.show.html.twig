{% extends 'AppBundle::layout_tutorial.html.twig' %}


{% block title %}{{ 'sitename' | trans }} | {{ 'showblog.title'|trans }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="boxElement">
            <h2 class="main_title">{{ app.request.locale == 'en' ? articleBlog.EnglishTitle: articleBlog.FrenchTitle}}</h2>
                {{  app.request.locale == 'en' ? articleBlog.englishHtml|html : articleBlog.frenchHtml|html }}
                <hr><p><strong>{{ 'blog.user'|trans }} :</strong>{{ articleBlog.user }}
				   <strong  class="word-spacing"> {{ 'blog.date'|trans }} : </strong> {{ articleBlog.lastUpdateDate|date('d/m/Y') }}</p>
            
        </div>
    </div>
{% endblock content %}
