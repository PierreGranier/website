	<!--[if lt IE 9]>
	<script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
	<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->
	
{% endblock javascripts_head %}

{% block javascripts_body %}
	{{ parent() }}
	{% javascripts '@bootstrap_js' output='js/bootstrap.js'	%}
		<script src="{{ asset_url }}"></script>
	{% endjavascripts %}
	<script type="text/javascript" charset="utf-8" src="{{ asset('bundles/app/js/jquery.tubular.1.0.js') }}"></script>
	<script>
		var start = (new Date()).getTime();
		var THRESHOLD = 1000; // a number we will calculate below (2.5 sec)
		speedTest();

		function speedTest() {
			//Array des videos YouTube
			var videos = ["3hGK4MJrKys", "a87GC4ahmjA", "Dhmxh7LHaj4", "jbf0n9wPuds", "E43dHhS_9CI", "UNrDZR97rg4"];

			var duration = (new Date()).getTime() - start;
			if (duration < THRESHOLD) {
				$(document).ready(function() {
					$(".wrapper_login").tubular({videoId: videos[Math.floor(Math.random() * videos.length)], repeat: true});
				});
			} else {
				//Connexion trop lente, on ne charge pas la vidï¿½o
			}
		}
	</script>
{% endblock javascripts_body %}

{% block body %}
	{% include 'AppBundle:_components:navigation.html.twig' %}
	{% block content %}
	{% endblock content %}
	{% include 'AppBundle:_components:footer.html.twig' %}
{% endblock body %}
